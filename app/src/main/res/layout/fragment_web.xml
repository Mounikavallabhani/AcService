<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


  >

    <!--TextView and Button displayed in First Fragment -->
    <TextView
       android:layout_gravity="center"
        android:id="@+id/dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="WebSite Development"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:text="Types of Websites:"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"/>

    <RadioGroup

        android:id="@+id/webrediogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <RadioButton
            android:buttonTint="@color/your_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_web"
            android:textColor="@color/black"
            android:textSize="20dp"/>



        <RadioButton
            android:buttonTint="@color/your_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_dynamic_web"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <RadioButton
            android:buttonTint="@color/your_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_E_COMMERCE_web"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </RadioGroup>






</LinearLayout>