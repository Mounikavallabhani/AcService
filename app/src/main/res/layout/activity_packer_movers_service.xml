<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/servbg"
    tools:context="com.mansopresk.mansopresk01.acservice.acactivity.AcService">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarcredits"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00283a"
        android:gravity="top"
        android:minHeight="50dp"
        app:theme="@style/ToolbarStyle"
        app:titleMarginTop="@dimen/margin_to_center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mansopresk"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold"/></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Packers And Movers"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:textColor="#000"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/packers"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/movers" />

        />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:drawablePadding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Guarantee"
            android:textSize="30dp"
            android:textColor="#000"
            android:drawableLeft="@drawable/ram"/>
        <TextView
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upto 30days "/>


    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:id="@+id/packersimmediate"
        android:layout_marginTop="20dp"
        android:text="Immediate Service"
        android:textColor="#fff"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"/>
    <Button
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:id="@+id/pekersschedule"
        android:layout_marginTop="20dp"
        android:text="Schedule Service"
        android:textColor="#fff"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"/>

</LinearLayout>
